@using BankingLedger.Entities

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@{
    var user = await UserManager.GetUserAsync(User);
}


@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="navbar-nav">
            <li class="nav-item d-none d-md-flex" style="position: relative">
                <a class="nav-link" href="javascript:showPhaseModal()">Hello, </a>
            </li>
            <li class="nav-item" style="position: relative">
                <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Log out</a>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item" style="position: relative">
            <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
        </li>
        <li class="nav-item" style="position: relative">
            <a class="nav-link" asp-controller="Account" asp-action="Login">Log in</a>
        </li>
    </ul>
}
