@using Microsoft.AspNetCore.Identity;
@using BankingLedger.Entities
@using BankingLedger.ViewModels
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
}
<div class="container d-flex justify-content-center mt-5">
    <div class="col-8">
        <div class="card loginpage">
            <div class="card-body text-center">
                <h3>Welcome</h3>
            </div>
            <div class="card-footer">
                <a role="button" class="btn btn-primary float-left" asp-controller="account" asp-action="Register">Register</a>
                <a role="button" class="btn btn-primary float-right" asp-controller="account" asp-action="Login">Log in</a>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
